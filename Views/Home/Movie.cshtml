                <img id="poster-image" src="https://image.tmdb.org/t/p/w500//@ViewBag.MovieDetails.poster_path" alt="">
            </div>

            <div class="movie-overview  flex">

                <h2>@ViewBag.MovieDetails.original_title</h2>
                <ul class="flex" style="gap: 25px;">
                    <li style="list-style-type: none;">@ViewBag.MovieDetails.release_date</li>
                        <li>Science Fiction</li>
                        <li>Romance</li>
                        <li>Comedy</li>
                </ul>       

                   <div class="movie-icons flex">
                  <div class="user-score flex">
                    <div class="icon" style="margin: 0;">@ViewBag.MovieDetails.vote_average</div>
                    <p style="padding: 8px;margin-right: 30px;">User Score</p>
                </div>
                <li class="icon" onclick="addMovie('792307')"><i class=" fa-solid fa-heart" aria-hidden="true"></i></li>
            </div>

            <div> 
                <h4>Overview</h4>
                <p class="overview-text">@ViewBag.MovieDetails.overview</p>
            </div>

            <div class="production-details flex">
