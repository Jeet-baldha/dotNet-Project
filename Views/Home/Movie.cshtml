<div class="background-image"></div>


<section class="movie-container" style="background-image: url('https://image.tmdb.org/t/p/w500//@ViewBag.MovieDetails.backdrop_path');">


    <div class="movie-details">

        <div class="inner-content flex " id="movie-title-box">
